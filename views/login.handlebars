<div class="container login-layout">
        <div class="card text-center bg-secondary" id="login">
            <div class="card-header">
                Login
            </div>
            <div class="card-body">
                <h5 class="card-title">Tpye your ID and PW</h5>
                <h5 class="isfail">{{failed}}{{signup}}</h5>
                <form method = "post" action = "/login_process">
                    <div class="form-group">
                        <label for="exampleInputEmail1">ID</label>
                        <input type="text"  name="id" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter ID">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" name="pw" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    </div>
                    <div class = "row logbtn">
                        <button type="submit" class="btn btn-primary logbtn2">Login</button>
                    </div>
                </form>
                <a href="/signup"><button class="btn btn-primary logbtn2">Sign up</button></a>
            </div>
        </div>
    </div>